<% layout('layouts/boilerPlate') -%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br>
      <h3>Listing Details</h3>
      <br>
      <div class="card">
        <img
          class="card-img-top"
          src="<%=listing.image%>"
          alt="Listing-Image"
          style="height: 18rem;"
        />
      </div>
    </div>

    <div class="col-6 offset-2">
      <div class="card-body">
        <p class="card-text">
          <%=listing.title %> <br />
          <%=listing.description%> <br />
          &#8377;<%=listing.price.toLocaleString("en-IN")%> <br />
          <%=listing.location%> <br />
          <%=listing.country%>
        </p>
      </div>

      <br>
      <div class="btns">
        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=DELETE
          "
          class="d-flex justify-content-between"
        >
          <a
            href="/listings/<%= listing._id %>/edit"
            class="btn btn-dark btn-add"
            >Edit</a
          >
          <button class="btn btn-dark btn-add">Delete your listing</button>
        </form>
        <br />
      </div>
    </div>
  </div>
</body>
